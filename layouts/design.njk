---
layout: base.njk
title: Design
---

<style>
:root {
  --gutter: 30px;
}
body, .home-block, .featured-block, .nav-title, .nav-link, .block-label {
  line-height: 1.3 !important;
}
.home-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--gutter);
  width: calc(100vw - 2 * var(--gutter));
  box-sizing: border-box;
  padding: 0;
  margin: 0 var(--gutter);
}
.home-block {
  padding: 0;
  font-size: 1.05em;
  font-weight: bold;
  box-sizing: border-box;
  min-height: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  background: #fff;
  color: var(--black);
  border-radius: 0;
  transition: background 0.2s, color 0.2s;
  cursor: pointer;
  overflow: hidden;
  border: none;
}
.project-image-wrapper {
  width: 100%;
  overflow: hidden;
  display: block;
  position: relative;
}
.project-image {
  width: 100%;
  display: block;
  object-fit: cover;
  background: var(--accent4);
  margin: 0;
  padding: 0;
  transition: filter 0.25s;
}
.home-block:hover .project-image {
  filter: brightness(0.7) saturate(1.1);
  z-index: 2;
}
.aspect-16x9 { aspect-ratio: 16/9; }
.aspect-1x1 { aspect-ratio: 1/1; }
.aspect-9x16 { aspect-ratio: 9/16; }
.aspect-4x3 { aspect-ratio: 4/3; }
.aspect-3x4 { aspect-ratio: 3/4; }
.project-content {
  padding: 1.1rem 0 1.2rem 0;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  text-align: left;
}
.project-row {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  width: 100%;
  padding-top: 0px;
}
.project-title {
  font-weight: bold;
  font-size: 0.8em;
  margin-bottom: 0;
}
.block-label {
  font-size: 0.8em;
  color: var(--grey70);
  font-weight: normal;
  letter-spacing: 0.1em;
  display: block;
  text-align: right;
  margin: 0;
}
.project-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.4em;
  margin-top: 8px;
}
.project-tag {
  display: inline-block;
  background: var(--accent5);
  color: var(--grey70);
  font-size: 0.75em;
  padding: 0.18em 0.8em 0.18em 0.8em;
  border-radius: 999px;
  font-weight: normal;
  letter-spacing: 0.08em;
  margin-bottom: 0.2em;
}
@media (max-width: 900px) {
  .home-grid { grid-template-columns: 1fr 1fr; }
}
@media (max-width: 600px) {
  .home-grid { grid-template-columns: 1fr; }
}
</style>

<div class="home-grid">
{% set aspects = ["aspect-16x9", "aspect-1x1", "aspect-9x16", "aspect-4x3", "aspect-3x4"] %}
{% set images = [
  "https://images.unsplash.com/photo-1465101046530-73398c7f28ca?auto=format&fit=crop&w=600&q=80",
  "https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=crop&w=600&q=80",
  "https://images.unsplash.com/photo-1508921912186-1d1a45ebb3c1?auto=format&fit=crop&w=600&q=80",
  "https://images.unsplash.com/photo-1465101178521-c1a9136a3b43?auto=format&fit=crop&w=600&q=80",
  "https://images.unsplash.com/photo-1465101046530-73398c7f28ca?auto=format&fit=crop&w=600&q=80"
] %}
{% for i in range(1, 21) %}
  <div class="home-block">
    <span class="project-image-wrapper">
      <img class="project-image {{ aspects[(i-1) % aspects.length] }}" src="{{ images[(i-1) % images.length] }}" alt="Project {{ i }}" />
    </span>
    <div class="project-content">
      <div class="project-row">
        <div class="project-title">Project {{ i }}</div>
        <span class="block-label">(Description or image)</span>
      </div>
      <div class="project-tags">
        {% set tagsets = [
          ["Painting", "2024"],
          ["Editorial", "Branding"],
          ["Sculpture", "2023"],
          ["Digital", "2022"],
          ["Installation", "2021"]
        ] %}
        {% for tag in tagsets[(i-1) % tagsets.length] %}
          <span class="project-tag">{{ tag }}</span>
        {% endfor %}
      </div>
    </div>
  </div>
{% endfor %}
</div> 
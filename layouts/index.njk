---
layout: base.njk
title: Home
---

<style>
:root {
  --gutter: 30px;
}
body, .home-block, .featured-block, .nav-title, .nav-link, .block-label {
  line-height: 1.3 !important;
}
.featured-block {
  background: #fff;
  margin-bottom: var(--gutter);
  width: calc(100vw - 2 * var(--gutter));
  box-sizing: border-box;
  padding: 0;
  border-radius: 0;
  margin-left: var(--gutter);
  margin-right: var(--gutter);
  overflow: hidden;
}
.featured-image {
  width: 100%;
  aspect-ratio: 16/9;
  object-fit: cover;
  display: block;
}
.home-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--gutter);
  width: calc(100vw - 2 * var(--gutter));
  box-sizing: border-box;
  padding: 0;
  margin: 0 var(--gutter);
}
.home-block {
  padding: 0;
  font-size: 1.05em;
  font-weight: bold;
  box-sizing: border-box;
  min-height: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  background: #fff;
  color: var(--black);
  border-radius: 0;
  transition: background 0.2s, color 0.2s;
  cursor: pointer;
  overflow: hidden;
  border: none;
}
.project-image-wrapper {
  width: 100%;
  overflow: hidden;
  display: block;
  position: relative;
}
.project-image {
  width: 100%;
  display: block;
  object-fit: cover;
  background: var(--accent4);
  margin: 0;
  padding: 0;
  transition: filter 0.25s;
}
.home-block:hover .project-image {
  filter: brightness(0.7) saturate(1.1);
  z-index: 2;
}
.aspect-16x9 { aspect-ratio: 16/9; }
.aspect-1x1 { aspect-ratio: 1/1; }
.aspect-9x16 { aspect-ratio: 9/16; }
.aspect-4x3 { aspect-ratio: 4/3; }
.aspect-3x4 { aspect-ratio: 3/4; }
.project-content {
  padding: 1.1rem 0 1.2rem 0;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  text-align: left;
}
.project-row {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  width: 100%;
  padding-top: 0px;
}
.project-title {
  font-weight: bold;
  font-size: 0.8em;
  margin-bottom: 0;
}
.block-label {
  font-size: 0.8em;
  color: var(--grey70);
  font-weight: normal;
  letter-spacing: 0.1em;
  display: block;
  text-align: right;
  margin: 0;
}
.project-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.4em;
  margin-top: 8px;
}
.project-tag {
  display: inline-block;
  background: var(--accent5);
  color: var(--grey70);
  font-size: 0.75em;
  padding: 0.18em 0.8em 0.18em 0.8em;
  border-radius: 999px;
  font-weight: normal;
  letter-spacing: 0.08em;
  margin-bottom: 0.2em;
}
@media (max-width: 900px) {
  .home-grid { grid-template-columns: 1fr 1fr; }
  .featured-block { font-size: 1.2em; }
}
@media (max-width: 600px) {
  .home-grid { grid-template-columns: 1fr; }
  .featured-block { font-size: 1em; }
}
.hero-slideshow {
  position: relative;
  width: 100%;
  aspect-ratio: 16/9;
  overflow: hidden;
}
.hero-slide {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  object-fit: cover;
  opacity: 0;
  transition: opacity 1.2s cubic-bezier(.4,0,.2,1);
  z-index: 1;
  pointer-events: none;
  background: #fff;
}
.hero-slide[style*="opacity:1"] {
  z-index: 2;
  pointer-events: auto;
}
.typographic-homepage {
  margin-bottom: 3rem;
}
.typographic-marquee-row {
  overflow-x: hidden;
  white-space: nowrap;
  width: 100vw;
  border-bottom: 1px solid #eee;
  margin-bottom: 1.5rem;
  position: relative;
  cursor: pointer;
}
.typographic-marquee-inner {
  display: inline-block;
  will-change: transform;
  font-size: 80px;
  padding: 0.7rem 0;
}
.typographic-marquee-inner.left {
  animation: typographic-marquee-left 130s infinite cubic-bezier(0.4,0,0.2,1);
}
.typographic-marquee-inner.right {
  animation: typographic-marquee-right 130s infinite cubic-bezier(0.4,0,0.2,1);
}
@keyframes typographic-marquee-left {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
@keyframes typographic-marquee-right {
  0% { transform: translateX(-50%); }
  100% { transform: translateX(0); }
}
.typographic-marquee-weight {
  margin-right: 0.01em;
}
.typographic-marquee-group {
  margin-right: 2.2rem;
  display: inline-block;
}
/* Font faces for all families */
@font-face {
  font-family: 'Geometric Sans';
  src: url('/fonts/GeometricSansComplete/ttf/GeometricSans-Regular.ttf') format('truetype');
  font-weight: 400;
  font-style: normal;
}
@font-face {
  font-family: '188 Sans';
  src: url('/fonts/188 Sans/188SansRegular.otf') format('opentype');
  font-weight: 400;
  font-style: normal;
}
@font-face {
  font-family: 'Sunnyside';
  src: url('/fonts/Sunnyside-Fonts/Sunnyside-Regular.woff2') format('woff2');
  font-weight: 400;
  font-style: normal;
}
@font-face {
  font-family: 'Haven';
  src: url('/fonts/Haven/Haven-Regular.otf') format('opentype');
  font-weight: 400;
  font-style: normal;
}
@font-face {
  font-family: 'Roman Serif';
  src: url('/fonts/AndRepeatSerifCaps-Regular.ttf') format('truetype');
  font-weight: 400;
  font-style: normal;
}
@font-face {
  font-family: 'Color Dot';
  src: url('/fonts/ColorDot_2023.07.28-SVG.ttf') format('truetype');
  font-weight: 400;
  font-style: normal;
}
</style>

<div class="featured-block">
  <div class="hero-slideshow">
    <img class="hero-slide" src="/images/Home_Hero/Bird_5CS-09_h.png" alt="Hero 1" style="opacity:1; z-index:2;">
  </div>
</div>

<div class="home-grid">
{% set aspects = ["aspect-16x9", "aspect-1x1", "aspect-9x16", "aspect-4x3", "aspect-3x4"] %}
{% set images = [
  "https://images.unsplash.com/photo-1465101046530-73398c7f28ca?auto=format&fit=crop&w=600&q=80",
  "https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=crop&w=600&q=80",
  "https://images.unsplash.com/photo-1508921912186-1d1a45ebb3c1?auto=format&fit=crop&w=600&q=80",
  "https://images.unsplash.com/photo-1465101178521-c1a9136a3b43?auto=format&fit=crop&w=600&q=80",
  "https://images.unsplash.com/photo-1465101046530-73398c7f28ca?auto=format&fit=crop&w=600&q=80"
] %}
{% for i in range(1, 21) %}
  <div class="home-block">
    <span class="project-image-wrapper">
      <img class="project-image {{ aspects[(i-1) % aspects.length] }}" src="{{ images[(i-1) % images.length] }}" alt="Project {{ i }}" />
    </span>
    <div class="project-content">
      <div class="project-row">
        <div class="project-title">Project {{ i }}</div>
        <span class="block-label">(Description or image)</span>
      </div>
      <div class="project-tags">
        {% set tagsets = [
          ["Painting", "2024"],
          ["Editorial", "Branding"],
          ["Sculpture", "2023"],
          ["Digital", "2022"],
          ["Installation", "2021"]
        ] %}
        {% for tag in tagsets[(i-1) % tagsets.length] %}
          <span class="project-tag">{{ tag }}</span>
        {% endfor %}
      </div>
    </div>
  </div>
{% endfor %}
</div>

<div class="typographic-homepage">
  {% set fontRows = [
    { name: 'Geometric Sans', class: 'geometric-sans', url: '/typography/geometric-sans/', family: 'Geometric Sans' },
    { name: '188 Sans', class: 'sans-188', url: '/typography/188-sans/', family: '188 Sans' },
    { name: 'Sunnyside', class: 'sunnyside', url: '/typography/sunnyside/', family: 'Sunnyside' },
    { name: 'Haven', class: 'haven', url: '/typography/haven/', family: 'Haven' },
    { name: 'Roman Serif', class: 'roman-serif', url: '/typography/roman-serif/', family: 'Roman Serif' },
    { name: 'Color Dot', class: 'color-dot', url: '/typography/color-dot/', family: 'Color Dot' }
  ] %}
  {% set chars = "abcdefghijklmnopqrstuvwxyz.,;:!?@#$%^&*()-_=+[]{}|/\\ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789½¼¾⅓⅔⅛⅜⅝⅞" %}
  {% for row in fontRows %}
    <a href="{{ row.url }}" class="typographic-marquee-row {{ row.class }}" style="text-decoration:none;">
      <span class="typographic-marquee-inner {% if loop.index0 % 2 == 0 %}left{% else %}right{% endif %}" style="font-family: '{{ row.family }}', Arial, sans-serif;">
        {% for i in range(0, chars | length) %}
          <span class="typographic-marquee-group">{{ chars[i] }}</span>
        {% endfor %}
        {% for i in range(0, chars | length) %}
          <span class="typographic-marquee-group">{{ chars[i] }}</span>
        {% endfor %}
      </span>
    </a>
  {% endfor %}
</div>

<script>
(function() {
  const slides = document.querySelectorAll('.hero-slide');
  let current = 0;
  setInterval(() => {
    if(slides.length === 0) return;
    slides[current].style.opacity = 0;
    slides[current].style.zIndex = 1;
    current = (current + 1) % slides.length;
    slides[current].style.opacity = 1;
    slides[current].style.zIndex = 2;
  }, 4200);
})();
</script> 
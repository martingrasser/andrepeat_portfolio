<style>
:root {
  --gutter: 30px;
}
body, .home-block, .featured-block, .nav-title, .nav-link, .block-label {
  line-height: 1.3 !important;
}
.featured-block {
  background: #fff;
  margin-bottom: var(--gutter);
  width: calc(100vw - 2 * var(--gutter));
  box-sizing: border-box;
  padding: 0;
  border-radius: 0;
  margin-left: var(--gutter);
  margin-right: var(--gutter);
  overflow: hidden;
}
.featured-image {
  width: 100%;
  aspect-ratio: 16/9;
  object-fit: contain;
  display: block;
}
.home-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
  width: calc(100vw - 2 * var(--gutter));
  box-sizing: border-box;
  padding: 0;
  margin: 0 var(--gutter);
}
.home-block {
  padding: 0;
  font-size: 1.05em;
  font-weight: bold;
  box-sizing: border-box;
  min-height: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  background: #fff;
  color: var(--black);
  border-radius: 0;
  transition: background 0.2s, color 0.2s;
  cursor: pointer;
  overflow: hidden;
  border: none;
  position: relative;
}
.project-image-wrapper {
  width: 100%;
  overflow: hidden;
  display: block;
  position: relative;
}
.project-image {
  width: 100%;
  display: block;
  object-fit: cover;
  background: var(--accent4);
  margin: 0;
  padding: 0;
  transition: filter 0.25s;
  aspect-ratio: 16/9;
}
.home-block:hover .project-image {
  filter: brightness(0.7) saturate(1.1);
  z-index: 2;
}
.aspect-16x9 { aspect-ratio: 16/9; }
.aspect-1x1 { aspect-ratio: 1/1; }
.aspect-9x16 { aspect-ratio: 9/16; }
.aspect-4x3 { aspect-ratio: 4/3; }
.aspect-3x4 { aspect-ratio: 3/4; }
.project-content {
  display: none;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(24,24,24,0.82);
  color: #fff;
  z-index: 2;
  padding: 2.2em 1.5em 2em 1.5em;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-family: '188 Sans', Arial, sans-serif;
  font-size: 16px;
  font-weight: 400;
  flex-direction: column;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.2s;
}
.home-block:hover .project-content {
  display: flex;
  opacity: 1;
  pointer-events: auto;
}
/* Hide only block-label and project-tags, not project-row */
.block-label, .project-tags {
  display: none !important;
}
.project-title {
  font-weight: bold;
  font-size: 1.2em;
  margin-bottom: 0;
  display: block;
}
.project-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.4em;
  margin-top: 8px;
}
.project-tag {
  display: inline-block;
  background: var(--accent5);
  color: var(--grey70);
  font-size: 0.75em;
  padding: 0.18em 0.8em 0.18em 0.8em;
  border-radius: 999px;
  font-weight: normal;
  letter-spacing: 0.08em;
  margin-bottom: 0.2em;
}
@media (max-width: 900px) {
  .home-grid { grid-template-columns: 1fr 1fr; }
  .featured-block { font-size: 1.2em; }
}
@media (max-width: 600px) {
  .home-grid { grid-template-columns: 1fr; }
  .featured-block { font-size: 1em; }
}
.hero-slideshow {
  position: relative;
  width: 100%;
  aspect-ratio: 16/9;
  overflow: hidden;
}
.hero-slide {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  object-fit: contain;
  opacity: 0;
  transition: opacity 1.2s cubic-bezier(.4,0,.2,1);
  z-index: 1;
  pointer-events: none;
  background: #fff;
}
.hero-slide[style*="opacity:1"] {
  z-index: 2;
  pointer-events: auto;
}
.typographic-homepage {
  margin-bottom: 3rem;
}
.typographic-marquee-row {
  overflow-x: hidden;
  white-space: nowrap;
  width: 100vw;
  border-bottom: 1px solid #eee;
  margin-bottom: 1.5rem;
  position: relative;
  cursor: pointer;
}
.typographic-marquee-inner {
  display: inline-block;
  will-change: transform;
  font-size: 80px;
  padding: 0.7rem 0;
}
.typographic-marquee-inner.left {
  animation: typographic-marquee-left 130s infinite cubic-bezier(0.4,0,0.2,1);
}
.typographic-marquee-inner.right {
  animation: typographic-marquee-right 130s infinite cubic-bezier(0.4,0,0.2,1);
}
@keyframes typographic-marquee-left {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
@keyframes typographic-marquee-right {
  0% { transform: translateX(-50%); }
  100% { transform: translateX(0); }
}
.typographic-marquee-weight {
  margin-right: 0.01em;
}
.typographic-marquee-group {
  margin-right: 2.2rem;
  display: inline-block;
}
/* Font faces for all families */

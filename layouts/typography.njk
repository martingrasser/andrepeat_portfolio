<style>
:root {
  --gutter: 30px;
}
body, .home-block, .featured-block, .nav-title, .nav-link, .block-label {
  line-height: 1.3 !important;
}
.home-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--gutter);
  width: calc(100vw - 2 * var(--gutter));
  box-sizing: border-box;
  padding: 0;
  margin: 0 var(--gutter);
}
.home-block {
  padding: 0;
  font-size: 1.05em;
  font-weight: bold;
  box-sizing: border-box;
  min-height: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  background: #fff;
  color: var(--black);
  border-radius: 0;
  transition: background 0.2s, color 0.2s;
  cursor: pointer;
  overflow: hidden;
  border: none;
}
.project-image-wrapper {
  width: 100%;
  overflow: hidden;
  display: block;
  position: relative;
}
.project-image {
  width: 100%;
  display: block;
  object-fit: cover;
  background: var(--accent4);
  margin: 0;
  padding: 0;
  transition: filter 0.25s;
}
.home-block:hover .project-image {
  filter: brightness(0.7) saturate(1.1);
  z-index: 2;
}
.aspect-16x9 { aspect-ratio: 16/9; }
.aspect-1x1 { aspect-ratio: 1/1; }
.aspect-9x16 { aspect-ratio: 9/16; }
.aspect-4x3 { aspect-ratio: 4/3; }
.aspect-3x4 { aspect-ratio: 3/4; }
.project-content {
  padding: 1.1rem 0 1.2rem 0;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  text-align: left;
}
.project-row {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  width: 100%;
  padding-top: 0px;
}
.project-title {
  font-weight: bold;
  font-size: 0.8em;
  margin-bottom: 0;
}
.block-label {
  font-size: 0.8em;
  color: var(--grey70);
  font-weight: normal;
  letter-spacing: 0.1em;
  display: block;
  text-align: right;
  margin: 0;
}
.project-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.4em;
  margin-top: 8px;
}
.project-tag {
  display: inline-block;
  background: var(--accent5);
  color: var(--grey70);
  font-size: 0.75em;
  padding: 0.18em 0.8em 0.18em 0.8em;
  border-radius: 999px;
  font-weight: normal;
  letter-spacing: 0.08em;
  margin-bottom: 0.2em;
}
@media (max-width: 900px) {
  .home-grid { grid-template-columns: 1fr 1fr; }
}
@media (max-width: 600px) {
  .home-grid { grid-template-columns: 1fr; }
}

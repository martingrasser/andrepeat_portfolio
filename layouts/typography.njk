.marquee {
  overflow-x: hidden;
  white-space: nowrap;
  width: 100%;
  border-bottom: 1px solid #eee;
  margin-bottom: 2rem;
  position: relative;
}
.marquee-weights {
  display: inline-block;
  animation: marquee-left 130s infinite;
  animation-timing-function: cubic-bezier(0.4,0,0.2,1);
  will-change: transform;
}
.marquee-letter {
  display: inline-block;
  margin-right: 2.2rem;
}
.marquee-weight {
  font-family: 'Geometric Sans', Arial, sans-serif;
  font-size: 101px;
  letter-spacing: 0.01em;
  color: #181818;
  display: inline-block;
  margin-right: 0.01em;
  vertical-align: bottom;
}
.marquee-weight.w100 { font-weight: 100; }
.marquee-weight.w200 { font-weight: 200; }
.marquee-weight.w400 { font-weight: 400; }
.marquee-weight.w500 { font-weight: 500; }
.marquee-weight.w700 { font-weight: 700; }
.marquee-weight.w800 { font-weight: 800; }
.marquee-weight.w900 { font-weight: 900; }
@keyframes marquee-left {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
</style>

